@{
    Layout = "~/Views/Shared/Footer.cshtml";
}

<div class="grid-container" style="background-color: rgb(60, 150, 223)">
    <div class="Fondo_icono" style="background-color: rgb(17, 68, 97)">
        <img class="center" src="~/Content/Iconos/user_add.png">
    </div>
    <div class="LOGIN" style="background-color: rgb(255, 255, 255)">

        <div class="LINKS">
            <ul>
                <li><b><a style="color:rgb(60, 150, 223)" href="Registro.html">Registro</a></b></li>
                <li><a href="#">/</a></li>
                <li><a style="color:rgb(0, 0, 0)" href="Login.html">Login</a></li>
            </ul>

        </div>

        <div class="USUARIO">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <input id="icon_prefix" type="text" class="validate">
                <label for="icon_prefix">Usuario</label>
            </div>
        </div>
        <div class="CORREO">
            <div class="input-field col s6">
                <i class="material-icons prefix">mail_outline</i>
                <input id="icon_prefix" type="email" class="validate">
                <label for="icon_prefix">E-mail</label>
            </div>
        </div>
        <div class="PASSWORD">
            <div class="input-field col s6">
                <i class="material-icons prefix">lock_outline</i>
                <input id="icon_prefix" type="password" class="validate">
                <label for="icon_prefix">Contraseña</label>
            </div>
        </div>
        <div class="CONFIRMARPASS">
            <div class="input-field col s6">
                <i class="material-icons prefix">lock_outline</i>
                <input id="icon_prefix" type="password" class="validate">
                <label for="icon_prefix">Confirmar Contraseña</label>
            </div>
        </div>
        <div class="BOTON">
            <a href="Login.html" class="waves-effect waves-light btn" style="color:#FFFFFF;"><i class="material-icons right">arrow_forward</i>REGISTRAR</a>
        </div>

    </div>
    <div class="ESPACIO_LOGO">
        <div class="LOGO">
            <img class="center" src="~/Content/Iconos/logo_empresa.png">
        </div>
    </div>


    <div class="PIE">
        <div class="FOOTER">

            <footer class="page-footer" style="background-color: rgb(60, 150, 223); margin-top:11%;">

                <div class="footer-copyright" style="background-color: rgb(17, 68, 97)">
                    <div class="container">
                        © 2019 Proyecto AYD1
                        <a class="grey-text text-lighten-4 right" href="https://www.facebook.com">More Links</a>
                    </div>
                </div>
            </footer>

        </div>

    </div>


</div>
