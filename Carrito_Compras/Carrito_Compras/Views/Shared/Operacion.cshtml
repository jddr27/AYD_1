else if (@ViewBag.Ambito == "AddR")
{
    string concatenarUrl = String.Concat("Descripcion/", @ViewBag.Id_Producto, "?precio=",ViewBag.precio);

    using (Ajax.BeginForm(concatenarUrl, "Home", new AjaxOptions { UpdateTargetId = "AddR" }, new { @class = "text-center border border-light p-5" }))
    {
