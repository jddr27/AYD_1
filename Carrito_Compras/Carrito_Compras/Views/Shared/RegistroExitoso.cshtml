@if (@ViewBag.Message =="1")
{
    //Si se realizo el registro exitosamente mostramos un mensaje de exitoso
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>¡Mensaje!</strong>
        <h1>Regitro Exitoso!</h1>
    </div>
}
else if (@ViewBag.Message =="0")
{

    //Si se realizo el registro exitosamente mostramos un mensaje de  no exitoso
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>¡Advertencia!</strong>
        <h1>Regitro no realizado con exito!</h1>
    </div>

}
else
{
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>¡Advertencia!</strong>
        <h1>No hay ninguna informacion para mostrar!</h1>
    </div>

}

