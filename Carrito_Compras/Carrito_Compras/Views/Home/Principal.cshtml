@model IList<Carrito_Compras.Models.Producto>
@{
    Layout = "~/Views/Shared/Layout1.cshtml";
}


               @if (@ViewBag.contador!=null && @ViewBag.contador == 0)
                {
                    //Si no hay productos al buscar  Mostramos mensaje en la pantalla
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>¡Mensaje!</strong>
                        <h1>No Existen Productos</h1>
                    </div>
                }
                <!--
<div>
    @foreach (var obj in @ViewBag.Listado)
    {
        //Recorremos la lista enviada de la busqueda
