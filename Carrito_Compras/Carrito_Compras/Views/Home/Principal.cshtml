    }

</div>
 
<div class="container">
    <div class="row pt-4">

        <!-- Content -->
        <div class="col-lg-12">


            <!-- /.Filter Area -->
            <!-- Products Grid -->
            <section class="section pt-4">

                <!-- Grid row -->
                <div class="row">

                    @foreach (var obj in @ViewBag.Listado)
{
    <div class="col-lg-4 col-md-6 mb-4">
        <!--Card-->
        <div class="card card-ecommerce">

            <!--Card image-->
            <div class="view overlay">
                @foreach (var img in @obj.imagenes)
                {
                    <img src=@img class="img-fluid" alt="">
                    break;
                }


                <a>
                    <div class="mask rgba-white-slight">
                        <ul>
                            <li>
                                @obj.descripcion
                            </li>

                        </ul>

                    </div>
                </a>
            </div>
            <!--Card image-->
            <!--Card content-->
            <div class="card-body des">
                <!--Category & Title-->

                <h5 class="card-title mb-1">
                    <strong>
                        <a href="@Url.Action("Descripcion", "Home", new { id =@obj.id ,precio=@obj.precio})" class="white-text">@obj.nombre</a>
                    </strong>
                </h5>
                <span class="badge badge-info mb-2">nuevo</span>


                <!--Card footer-->
                <div class="card-footer pb-0">
                    <div class="row mb-0">
                        <span class="float-left">
                            <strong>Q @obj.precio</strong>
                        </span>


                        @if (@Session["UserName"] != null)
                        {
                            <span class="float-right">

                                <a href="@Url.Action("detalles", "Home", new { prod = @obj.id, precio = @obj.precio})" class="" data-toggle="tooltip" data-placement="top"
                                   title="Add to Cart">
                                    <i class="fas fa-shopping-cart ml-3"></i>
                                </a>

                                @if (ViewBag.idx != null)
                                {
                                    <script type="text/javascript">
                                        window.onload = function () {
                                            alert("@ViewBag.idx");
                                        };



                                    </script>
                                }
                            </span>
                        }
                        else
                        {
                            <span class="float-right">

                                <a name="" class="" data-toggle="tooltip" data-placement="top"
                                   title="Add to Cart">
                                    <i class="fas fa-shopping-cart ml-3"></i>
                                </a>
                            </span>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
}

                </div>
                <!--Grid row-->
            </section>
            <!-- /.Products Grid -->

        </div>
        <!-- /.Content -->

    </div>
</div>
