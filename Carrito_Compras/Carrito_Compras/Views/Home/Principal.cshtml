@model IList<Carrito_Compras.Models.Producto>
    @{
        Layout = "~/Views/Shared/Layout1.cshtml";
    }




    <div>
        @foreach (var obj in @ViewBag.Message)
        {
            <li>Id:    @obj.id</li>
            <li>Nombre: @obj.nombre</li>
           
            <br />
            @Html.ActionLink("Agregar", "Carrito", new { id = @obj.id })

        }

    </div><!-- /Mega menu -->
    <!-- /.Main Container -->
    <div class="container">
        <div class="row pt-4">

            <!-- Content -->
            <div class="col-lg-12">


                <!-- /.Filter Area -->
                <!-- Products Grid -->
                <section class="section pt-4">

                    <!-- Grid row -->
                    <div class="row">

                        @foreach (var obj in @ViewBag.Message)
                        {
                            <div class="col-lg-4 col-md-6 mb-4">
                                <!--Card-->
                                <div class="card card-ecommerce">

                                    <!--Card image-->
                                    <div class="view overlay">
                                        <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/1.jpg"
                                             class="img-fluid" alt="">
                                        <a>
                                            <div class="mask rgba-white-slight">
                                                <ul>
                                                    <li>
                                                        @obj.descripcion
                                                    </li>

                                                </ul>


                                            </div>
                                        </a>
                                    </div>
                                    <!--Card image-->
                                    <!--Card content-->
                                    <div class="card-body des">
                                        <!--Category & Title-->

                                        <h5 class="card-title mb-1">
                                            <strong>
                                                <a href="@Url.Action("Descripcion", "Home", new { id =@objeto.id })" class="white-text">@obj.nombre</a>
                                            </strong>
                                        </h5>
                                        <span class="badge badge-info mb-2">nuevo</span>


                                        <!--Card footer-->
                                        <div class="card-footer pb-0">
                                            <div class="row mb-0">
                                                <span class="float-left">
                                                    <strong>Q @obj.precio</strong>
                                                </span>
                                                <span class="float-right">

                                                    <a href="@Url.Action("Carrito", "Home", new { id =1 })" class="" data-toggle="tooltip" data-placement="top"
                                                       title="Add to Cart">
                                                        <i class="fas fa-shopping-cart ml-3"></i>
                                                    </a>
                                                </span>
                                            </div>
                                        </div>

                                    </div>
                                    <!--Card content-->

                                </div>
                                <!--Card-->


                            </div>

                        }

                    </div>







                    <!--Grid row-->
                </section>
                <!-- /.Products Grid -->

            </div>
            <!-- /.Content -->

        </div>
    </div>
    <!-- /.Main Container -->
