                        <div class="card mb-4">
                            <div class="card-header white-text primary-color">
                                Comentarios Recientes
                            </div>
                            <div class="card-body">

                                <table class="table no-header mt-1">
                                    <thead>
                                        <tr>
                                            <th scope="col">Cliente</th>
                                            <th scope="col">Comentario</th>
                                            <th scope="col">Fotografía</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int contador = 0;}
                                        @foreach (var obj in @ViewBag.Comentarios)
                                        {
                                            contador++;

                                            if (contador <= 3)
                                            {
                                                <tr>
                                                    <td>@obj.usuario.nombres</td>
                                                    <td>@obj.texto_comentario</td>
                                                    <td class="hour">
                                                        <small>
                                                            <span class="grey-text float-right">
                                                                <i class="far fa-clock-o" aria-hidden="true"></i>
                                                                <img src="@obj.usuario.foto" height="50" width="50" class="avatar rounded-circle z-depth-1-half" />

                                                            </span>
                                                        </small>
                                                    </td>
                                                </tr>
                                            }
                                            else
                                            {

                                                break;
                                            }

                                        }



                                    </tbody>
                                </table>
                                <a href="@Url.Action("ReporteComentarios", "Home")" class="btn btn btn-flat grey lighten-3 btn-rounded waves-effect font-weight-bold dark-grey-text float-right">
                                    Ver Reporte Completo
                                </a>

                            </div>
                        </div>
