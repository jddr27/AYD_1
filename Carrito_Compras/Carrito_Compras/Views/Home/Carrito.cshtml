                        <!-- Fourth row -->
                        <tr>
                            <td colspan="3"></td>
                            <td>
                                <h4 class="mt-2">
                                    <strong>Total</strong>
                                </h4>
                            </td>
                            <td class="text-right">
                                <h4 class="mt-2">
                                    <strong>Q2600</strong>
                                </h4>
                            </td>
                            <td colspan="3" class="text-right">
                                <form action="Pago_boleta.html">
                                    <button type="submit" style="background-color: #6a9655" class="btn  waves-effect waves-light">
                                        Generar Boleta ..
                                        <i class="fas fa-angle-right right"></i>
                                    </button>
                                </form>
                                <form action="Pago_tarjeta.html">
                                    <button type="submit" style="background-color: #6a9655" class="btn  waves-effect waves-light">
                                        Comprar Tarjeta
                                        <i class="fas fa-angle-right right"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <!-- Fourth row -->

                    </tbody>
                    <!-- /.Table body -->

                </table>

            </div>
