<div class="container">
    <div class="row pt-4">



        <section id="productDetails" class="pb-5">

            <!--News card-->
            <div class="card mt-5 hoverable">
                <div class="row mt-5">



                    <div class="col-lg-6">
                        <!--Este es el carrousel de imagenes del producto-->
                        <div class="row mx-2">
                            <!--Carousel Wrapper-->
                            <div id="carousel-thumb"
                                 class="carousel slide carousel-fade carousel-thumbnails mb-5 pb-4"
                                 data-ride="carousel">

                                <!--Slides-->
                                <div class="carousel-inner text-center text-md-left" role="listbox">

                                    @foreach (var obj in @ViewBag.prods)
                                    {
                                        int contador = 0;
                                        if (@obj.id.Equals(@ViewBag.idProducto))
                                        {
                                            foreach (var img in @obj.imagenes)
                                            {
                                                if (contador == 0)
                                                {
                                                    <div class="carousel-item active">

                                                        <img src="@img"
                                                             alt="First slide" class="img-fluid">
                                                    </div>

                                                }
                                                else
                                                {
                                                    <div class="carousel-item">
                                                        <img src="@img"
                                                             alt="Second slide" class="img-fluid">
                                                    </div>

                                                }


                                                contador++;
                                            }
                                        }


                                    }



                                </div>
                                <!--/.Slides-->
                                <!--Thumbnails-->
                                <a class="carousel-control-prev" href="#carousel-thumb" role="button"
                                   data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel-thumb" role="button"
                                   data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                                <!--/.Thumbnails-->

                            </div>
                            <!--/.Carousel Wrapper-->
                        </div>
                        <!--Este es el div de color celeste que muestra la informacion de un producto y a su lado esta un boton de agregar al carrito-->



                    </div>


                    @foreach (var obj in @ViewBag.prods)
                    {

                        if (@obj.id.Equals(@ViewBag.idProducto))
                        {

                            <div class="col-lg-5 mr-3 text-center text-md-left">
                                <h2 class="h2-responsive text-center text-md-left product-name font-weight-bold dark-grey-text mb-1 ml-xl-0 ml-4">
                                    <strong>@obj.nombre </strong>
                                    <span class="red-text font-weight-bold">
                                        <strong>Q @obj.precio</strong>
                                    </span>

                                </h2>

                                <span class="badge badge-info mb-2">nuevo</span>


                                <p class="ml-xl-0 ml-4">
                                    <ul>
                                        <li>
                                            <span class="a-list-item">
                                                @obj.descripcion

                                            </span>
                                        </li>
                                    </ul>
                            </div>
                        }
                    }

                    <!-- Add to Cart -->
                    <section class="color">
                        <div class="mt-5">
                            <div class=" card col-md-12 des2">
                                <div class=" row mx-4 des2 " style="" width: 100%; height: 250px;">


                                    <div class="col">


                                        @foreach (var obj in @ViewBag.prods)
                                        {

                                            if (@obj.id.Equals(@ViewBag.idProducto))
                                            {
                                                <ul class="a-unordered-list a-vertical a-spacing-none">

                                                    <li>
                                                        <span class="a-list-item"></span>
                                                        @obj.descripcion
                                                    </li>

                                                </ul>
                                            }
                                        }
                                    </div>

                                    <div class="col">
                                        <a style="position:absolute;top:0px;right:0px;" class="flotanteDescripcion"
                                           href="carrito.html">
                                            <img src="~/Content/Iconos/carritoadd.png" width="60px"
                                                 height="60px">
                                        </a>
                                    </div>


                                </div>

                            </div>
                            <div class="col-md-12">


                                <div class="row text-center text-md-left">


                                    @foreach (var obj in @ViewBag.prods)
                                    {
                                        int contador = 0;
                                        if (@obj.id.Equals(@ViewBag.idProducto))
                                        {
                                            foreach (var img in @obj.imagenes)
                                            {

                                                <figure class="col-md-4">
                                                    <!--Large image-->
                                                    <a href="@img"
                                                       data-size="1600x1067">
                                                        <!-- Thumbnail-->
                                                        <img src="@img"
                                                             class="img-fluid">
                                                    </a>
                                                </figure>

                                            }
                                        }


                                    }

                                    <!--Grid column-->
                                </div>
                            </div>


                            @using (Ajax.BeginForm("Detalle2", "Home", new AjaxOptions { UpdateTargetId = "info_login" }))
                            {

                                <div id="info_login" class="row mt-3 mb-4">
                                    <div class="col">
                                        <div class="col-md-12 text-center text-md-left text-md-right">
                                            <button class="btn btn-primary waves-effect waves-light">
                                                <i class="fas fa-cart-plus mr-2" aria-hidden="true"></i>
                                                Agregar al
                                                carrito
                                            </button>


                                        </div>
                                    </div>
                                    <div class="col">
                                        <div id="buscar">

                                            <input name="cantidad" id="cantidad" type="number" class="cantidad brradius" placeholder="Cantidad">
                                            <input type="hidden" id="idProducto" name="idProducto" value="@ViewBag.idProducto">
                                            <input type="hidden" id="PrecioProducto" name="PrecioProducto" value="@ViewBag.precioProducto">

                                        </div>

                                    </div>

                                </div>




                            }
                        </div>
                    </section>
                    <!-- /.Add to Cart -->
                </div>
            </div>
        </section>
    </div>
    <!--News card-->


    <div class="comments-list text-center text-md-left">

        <!-- First row -->
        @foreach (var obj in @ViewBag.Reseña)
        {
            if (@ViewBag.idProducto == @obj.producto_comentario)
            {
                <div class="row mb-5">

                    <!-- Image column -->
                    <div class="col-sm-2 col-12 mb-3">
                        <h1></h1>
                        <img src="@obj.usuario.foto" alt="sample image" height="125" width="125" class="avatar rounded-circle z-depth-1-half">

                    </div>
                    <!-- Image column -->
                    <!-- Content column -->
                    <div class="col-sm-10 col-12">

                        <a>

                            <h5 class="user-name font-weight-bold">@obj.usuario.nombres</h5>

                        </a>

                        <!-- Rating -->
                        @if (@obj.valoracion_comentario == 1)
                        {
                            <i class="fas fa-star blue-text"></i>
                        }
                        else if (@obj.valoracion_comentario == 2)
                        {
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>
                        }
                        else if (@obj.valoracion_comentario == 3)
                        {
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>

                        }
                        else if (@obj.valoracion_comentario == 4)
                        {
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>

                        }
                        else if (@obj.valoracion_comentario == 5)
                        {
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>
                            <i class="fas fa-star blue-text"></i>

                        }





                        <div class="card-data">

                            <ul class="list-unstyled mb-1">

                                <li class="comment-date font-small grey-text">

                                    <i class="far fa-clock-o"></i> @obj.fecha_comentario
                                </li>

                            </ul>

                        </div>

                        <p class="dark-grey-text article">
                            @obj.texto_comentario
                        </p>

                    </div>
                    <!-- Content column -->

                </div>

                <div class="divider-new">
                </div>
            }


        }






    </div>

</div>
<!--Este es un segundo boton flotante para agregar una reseña de un producto-->

<div class="footer-copyright py-3 text-center">
    <div class="container-fluid">
        <div style="display: scroll;    position: fixed;    bottom: 200px;    right: 0px;">
            <a href="" class="btn btn-success btn-rounded mb-4  brradius" data-toggle="modal" data-target="#modalAgregarUser">
                <i class="fas fa-edit"></i>
                Write review
            </a>
        </div>
    </div>
</div>



<!--Este div es un modal que se abre al momento de presionar el boton flotante anterior-->

<div class="modal fade" id="modalAgregarUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Agregar reseña</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            @if (ViewBag.idUser == null)
            {

                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        <h1>Para escribir una reseña debe ingresar a su cuenta!</h1>

                    </div>

                </div>
            }
            else
            {
                if (@ViewBag.Valor == 1)
                {
                    using (Ajax.BeginForm("AgregarReseña", "Home", new AjaxOptions { UpdateTargetId = "EditarCliente" }, new { @class = "" }))
                    {


                        <div class="modal-body mx-3">
                            <div class="md-form mb-5">
                                <i class="fas fa-envelope prefix grey-text"></i>
                                <input type="text" id="reseña" name="reseña" class="form-control validate" placeholder="Escribir reseña!" required>
                                <input type="hidden" id="idUser" name="idUser" class="form-control validate" value="@ViewBag.idUser" required>
                                <input type="hidden" id="idProducto" name="idProducto" class="form-control validate" value="@ViewBag.idProducto" required>
                            </div>



                            <div class="md-form mb-4">
                                <h4>Valoracion</h4>
                                <select name="valoracion" id="valoracion" class="browser-default custom-select" required>

                                    <option value="1">Muy Malo</option>
                                    <option value="2">Malo</option>
                                    <option value="3">Bueno</option>
                                    <option value="4">Excelente</option>
                                    <option value="5">SuperExcelente</option>

                                </select>
                            </div>

                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button class="btn btn-default">Agregar Reseña</button>
                        </div>
                    }

                }
                else
                {
                    <div class="modal-body mx-3">
                        <div class="md-form mb-5">
                            <h1>Para escribir una reseña sobre este producto debió haberlo comprado con anterioridad!</h1>

                        </div>

                    </div>


                }




            }

        </div>
    </div>
</div>