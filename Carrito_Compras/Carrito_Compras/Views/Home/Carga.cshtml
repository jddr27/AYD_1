<!-- Default form login -->
<form class="text-center border border-light p-5">

    <p class="h4 mb-4">Carga de Productos</p>

    <div class="container">
        <div class="row">
            <div class="col">
                <!-- Ingreso del nombre del producto -->

                <input type="text" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="Nombre del Producto">
            </div>
            <div class="col">
                <!-- Ingreso de la cantidad del producto -->
                <input type="number" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Cantidad">
            </div>

        </div>


        <input type="number" id="precio" class="form-control mb-4" placeholder="Precio">
        <textarea id="form75" class="md-textarea form-control" rows="3" placeholder="Descripcion"></textarea>
        <p> </p>
        <input type="text" id="img1" class="form-control mb-4" placeholder="Imagen 1">
        <input type="text" id="img2" class="form-control mb-4" placeholder="Imagen 2">
        <input type="text" id="img3" class="form-control mb-4" placeholder="Imagen 3">

        <div class="row">
            <div class="col">
                <!-- Seleccionar la categoria -->

                <select class="browser-default custom-select">
                    <option selected>Seleccionar categoria</option>
                    @foreach (var obj in @ViewBag.Categoria)
                    {

                        <option value="@obj.id">@obj.nombre</option>


                    }
                </select>
            </div>
            <div class="col">
                <!-- Seleccionar la marca -->
                <select class="browser-default custom-select">

                    <option selected>Seleccionar marca </option>

                    @foreach (var obj in @ViewBag.Marca)
                    {
                    
                    <option value="@obj.id">@obj.nombre</option>
                        
                        
                    }


                    
                </select>
            </div>

        </div>

        <!-- Sign in button -->
        <button class="btn btn-info btn-block my-4" type="submit">Cargar</button>

    </div>

</form>
<!-- Default form login -->
